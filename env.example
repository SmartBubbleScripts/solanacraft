# Solana Network Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Commission wallet address for platform fees
NEXT_PUBLIC_COMMISSION_WALLET_ADDRESS=your_wallet_address_here

# Your Commission Wallet (where you receive fees)
COMMISSION_WALLET_PRIVATE_KEY=your_commission_wallet_private_key_here
COMMISSION_WALLET_PUBLIC_KEY=your_commission_wallet_public_key_here

# Fixed Commission per closed account (0.0007 SOL per account)
# This is not a percentage - it's a fixed SOL amount per transaction
FIXED_COMMISSION_PER_ACCOUNT=0.0007

# Firebase Configuration (if you want to track claims)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Optional: Analytics
NEXT_PUBLIC_GA_TRACKING_ID=your_ga_tracking_id

# Security
JWT_SECRET=your_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
