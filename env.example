# Solana Network Configuration
NEXT_PUBLIC_SOLANA_NETWORK=mainnet
# NEXT_PUBLIC_SOLANA_NETWORK=devnet  # Use this for testing

# Production RPC Endpoints (Recommended for production)
# Helius: Free tier - 100M requests/month
NEXT_PUBLIC_HELIUS_RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_HELIUS_API_KEY

# QuickNode: Free tier - 3M requests/month  
NEXT_PUBLIC_QUICKNODE_RPC_URL=https://your-endpoint.solana-mainnet.quiknode.pro/YOUR_QUICKNODE_API_KEY/

# Alchemy: Free tier - 300M compute units/month
NEXT_PUBLIC_ALCHEMY_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Fallback RPC (Public - NOT recommended for production)
# NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Commission wallet address for platform fees
NEXT_PUBLIC_COMMISSION_WALLET_ADDRESS=your_wallet_address_here

# Your Commission Wallet (where you receive fees)
COMMISSION_WALLET_PRIVATE_KEY=your_commission_wallet_private_key_here
COMMISSION_WALLET_PUBLIC_KEY=your_commission_wallet_public_key_here

# New Fee Structure
# 0.0007 SOL per wallet (base fee)
# If closing more than 5 accounts: +5% of client receive amount
WALLET_BASE_FEE=0.0007
VOLUME_COMMISSION_RATE=0.05
VOLUME_THRESHOLD=5

# Production Settings
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
RPC_RETRY_ATTEMPTS=3
RPC_RETRY_DELAY=1000

# Firebase Configuration (if you want to track claims)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Optional: Analytics
NEXT_PUBLIC_GA_TRACKING_ID=your_ga_tracking_id

# Security
JWT_SECRET=your_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
